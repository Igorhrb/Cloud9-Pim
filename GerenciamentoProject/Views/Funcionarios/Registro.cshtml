@model List<FuncionarioModel>
@{
    ViewData["Title"] = "Lista de Funcionários";
}
<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-context-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Funcionarios" asp-action="Create"> Criar Funcionário </a>
    </div>
    <br />
<h1>@ViewData["Title"]</h1>

<p>Todos os dados:</p>
  

<table class="table" id="tabela-funcionarios">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">CPF</th>
            <th scope="col">Cargo</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
            @if (Model != null && Model.Any())
            {
              foreach(var func in Model)
                {
                    <tr>

                        <th scope="row">@func.Id_funcionario</th>
                        <td>@func.Nome</td>
                        <td>@func.CPF</td>
                        <td>@func.Cargo</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@func.Id_funcionario"  asp-controller="Funcionarios" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-outline-danger" asp-route-id="@func.Id_funcionario" asp-controller="Funcionarios" asp-action="Desativar">Desativar</a>
                            </div>
                        </td>
                    </tr>
                
                       
                   
                }
            }
         
    </tbody>
</table>
  


</div>
